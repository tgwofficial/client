<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.nativeform.FormAddBankDarah">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/add_bankdarah"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/bankdarah_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Form Rencana Persalinan"
                android:textAlignment="center"
                android:layout_marginBottom="50dp"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="18sp"
                android:textStyle="bold" />


            <include
                layout="@layout/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <AutoCompleteTextView
                        android:id="@+id/htp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/htp"
                        android:inputType="date"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        <include
            layout="@layout/divider"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/penolongpersalinan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/penolong_persalinan"
                        android:maxLines="1"
                        android:singleLine="true" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/dokter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dokter"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/bidan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bidan"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/dukun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dukun"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"
                            android:onClick="onRadioButtonClicked" />

                    </RadioGroup>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <include
                layout="@layout/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tempatbersalin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tempat_bersalin"
                        android:maxLines="1"
                        android:singleLine="true" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/rs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rumas Sakit"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/puskesmas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Puskesmas"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/polindes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Polindes"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/rumah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rumah"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/tempat_lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"
                            android:onClick="onRadioButtonClicked" />

                    </RadioGroup>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <include
                layout="@layout/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/pendamping"
                        android:maxLines="1"
                        android:singleLine="true" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/suami"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/suami"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/ortu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ortu"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/saudara"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/saudara"
                            android:onClick="onRadioButtonClicked" />

                        <RadioButton
                            android:id="@+id/pendamping_lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"
                            android:onClick="onRadioButtonClicked" />

                    </RadioGroup>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <include
                layout="@layout/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/transportsis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/transportasipemilik"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <include
                layout="@layout/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hub_pemilik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hub_pemilik"
                        android:maxLines="1"
                        android:singleLine="true" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/hub_suami"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/suami"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/anggota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/anggota_keluarga"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/tetangga"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tetannga"
                            android:onClick="onRadioButtonClicked" />

                        <RadioButton
                            android:id="@+id/hub_lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"
                            android:onClick="onRadioButtonClicked" />

                    </RadioGroup>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <include
                layout="@layout/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/calon_pendonor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/calon_pendonor"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
            <include
                layout="@layout/divider"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hub_pendonor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hub_pendonor"
                        android:maxLines="1"
                        android:singleLine="true" />
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/pend_suami"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/suami"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/pend_saudara"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/saudara"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/pend_ibu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ibu"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/pend_ayah"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ayah"
                            android:onClick="onRadioButtonClicked" />
                        <RadioButton
                            android:id="@+id/pend_lainnya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lainnya"
                            android:onClick="onRadioButtonClicked" />

                    </RadioGroup>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
            <Button
                android:id="@+id/saved"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Simpan"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>